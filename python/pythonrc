# Enable syntax completion
try:
    import readline
except ImportError:
    print("Module 'readline' not available.")
else:
    import rlcompleter
    readline.parse_and_bind('tab: complete')


# Load selected modules
from pprint import pprint as pp
from pprint import pformat as pf


# Simple debugging
# Evaluate and print local variables in case of exception.
def pydbug(func, *args, **kwargs):
    try:
        return func(*args, **kwargs)
    except:
        import inspect
        v = inspect.trace()[-1][0].f_locals
        pprint("LOCALS: {}".format(v))
        raise

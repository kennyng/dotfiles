######################################################################
# bash/profile-macosx
# -------------------
# ~/.profile: executed by command interpreter for login shells
# Exports PATH and other environment variables on macOS.
# Sets system-specific aliases.
#
######################################################################

echo "[ $(date +'%A | %Y-%m-%d | %r') ] ~ Welcome, Kenny! ヾ(＾-＾)ノ"

# Enable color support for ls and grep
# Order: directory, symlink, socket, pipe, executable,
#        block special, character special, executable setuid,
#        executable setgid, directory writable sticky, directory writable
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
# Solarized dircolors:
#export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD
export GREP_OPTIONS='--color=auto'

# Set vim as default editor
export GIT_EDITOR=vim
export VISUAL=vim
export EDITOR=vim

# Set color scheme according to time of day
#H=$(date +%H)
#if (( 6 <= 10#$H && 10#$H < 18 )); then
#     # Use light theme between 6AM and 6PM.
#    base16 solarized-light
#    base16 tomorrow
#    base16 google-light
#    base16 default-light
#    base16 shapeshifter
#    base16 harmonic16-light
#else
#    base16 solarized-dark
#    base16 eighties
#    base16 railscasts
#    base16 ocean
#    base16 oceanicnext
#fi

# Launch Finder
alias finder='open -a Finder'
# Launch Preview
alias preview='open -a /Applications/Preview.app'
# Launch Sublime Text
alias sublime-text='open -a /Applications/Sublime Text.app'
# Launch Dropbox
alias dropbox='open -a /Applications/Dropbox.app'
# Launch Safari
alias safari='open -a /Applications/Safari.app'
# Launch Firefox
alias firefox='open -a /Applications/Firefox.app'
# Launch Chrome
alias chrome='open -a /Applications/Google Chrome.app'
